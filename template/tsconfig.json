{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["react-native"],
    "module": "ESNext",
    /* Completeness */
    "baseUrl": "src" /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "allowUmdGlobalAccess": true
  },
  "include": [
    "./src",
    "babel.config.js",
    "metro.config.js",
    ".eslintrc.js",
    "index.js"
  ],
  "exclude": ["node_modules"]
}
